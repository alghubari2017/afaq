<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"



    tools:context="com.alghubari.afaq.MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="110dp"
        android:layout_height="match_parent"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout

            android:id="@+id/textInputLayout8"
            android:layout_width="100dp"

            android:layout_height="wrap_content"

            android:hint="السعر">

            <EditText
                android:id="@+id/edittext_address_price"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout7"
            android:layout_width="100dp"

            android:layout_height="wrap_content"
            android:hint="المدفوع">

            <EditText
                android:id="@+id/editext_value_pay"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout6"
            android:layout_width="100dp"

            android:layout_height="wrap_content"

            android:hint="الباقي">

            <EditText
                android:id="@+id/editext_remained_value"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout5"
            android:layout_width="100dp"

            android:layout_height="wrap_content"

            android:hint="طول الكتف">

            <EditText
                android:id="@+id/editext_shoulder_lenght"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout15"
            android:layout_width="100dp"

            android:layout_height="70dp"

            android:hint="وسع اليد">


            <EditText
                android:id="@+id/ed_text_hand"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout13"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:hint="من تحت">


            <EditText
                android:id="@+id/ed_text_fromdwon"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/check_gabsor"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:text="الجبزور" />
        <CheckBox
            android:id="@+id/chec_geuoob"
            android:layout_width="100dp"
            android:layout_height="44dp"

            android:text="الجيوب" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="138dp"
        android:layout_height="match_parent"

        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="13dp">

        <android.support.design.widget.TextInputLayout

            android:id="@+id/textInputLayout3"
            android:layout_width="150dp"

            android:layout_height="wrap_content"

            android:hint="اسم العميل"

            >

            <EditText
                android:id="@+id/edittext_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:id="@+id/textInputLayout2"
            android:layout_width="150dp"

            android:layout_height="wrap_content"
            android:hint="الهاتف">

            <EditText
                android:id="@+id/editext_phone"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="phone" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout

            android:id="@+id/textInputLayout"
            android:layout_width="150dp"

            android:layout_height="wrap_content"

            android:hint="التاريخ">
            <EditText
                android:id="@+id/edittext_date"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="date" />

        </android.support.design.widget.TextInputLayout>




        <Spinner
            android:id="@+id/spinner_nick"
            android:layout_width="150dp"
            android:layout_height="54dp" />

        <Spinner
            android:id="@+id/spinner_cabk"
            android:layout_width="150dp"
            android:layout_height="55dp"


            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout143"

            android:layout_width="150dp"
            android:layout_height="wrap_content"

            android:hint="رقم صفحه">


            <EditText
                android:id="@+id/ed_text_page_number"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/check_gahas"
            android:layout_width="150dp"
            android:layout_height="51dp"

            android:text="جاهز" />

        <ImageButton
            android:id="@+id/imageButton_update"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/update_user" />

        <ImageButton
            android:id="@+id/imageButton_save"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/save_button" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="102dp"
        android:layout_height="match_parent"

        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="120dp"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_marginRight="120dp">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:hint="العدد">

            <EditText
                android:id="@+id/editext_adress_count"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout10"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:hint="الطول">

            <EditText
                android:id="@+id/editext_adress_lenght"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout9"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:hint="الكم">

            <EditText
                android:id="@+id/ed_text_alkm"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"/>


        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout11"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:hint="الصدر">


            <EditText
                android:id="@+id/ed_text_chest"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout12"
            android:layout_width="100dp"

            android:layout_height="wrap_content"

            android:hint="الرقبه">


            <EditText
                android:id="@+id/ed_text_nick"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayout14"
            android:layout_width="100dp"
            android:layout_height="wrap_content"

            android:hint="طول الكبك">


            <EditText
                android:id="@+id/ed_text_caback_lenght"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"/>
        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:id="@+id/chec_work"
            android:layout_width="100dp"
            android:layout_height="44dp"

            android:text="بدءعمل" />

        <ImageButton
            android:id="@+id/imageButton_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/add_user" />


        <ImageButton
            android:id="@+id/imageButton_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/search_user" />


    </LinearLayout>

</RelativeLayout>
</ScrollView>